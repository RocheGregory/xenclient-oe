--- linux-3.19.8.orig/drivers/pci/pci.c	2015-06-08 14:34:28.996214792 +0200
+++ linux-3.19.8/drivers/pci/pci.c	2015-06-08 14:40:14.452334351 +0200
@@ -3345,6 +3345,10 @@
 
 	rc = pci_parent_bus_reset(dev, probe);
 done:
+	/* larger delay for gpus */
+	if (!probe && (dev->class == 0x30000 || dev->class == 0x38000))
+	  msleep(500);
+
 	return rc;
 }
 
